            android:text="평점"
            android:gravity="center"/>
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="0"
            android:max="5"
            android:stepSize="0.1"
            android:textSize="20sp"/>

