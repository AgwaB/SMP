            android:layout_width="50dp"
            android:layout_height="50dp" />
        
        <TextView
            android:id="@+id/IDtitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Item Title"
            android:textSize="20sp"
            android:gravity="center"/>

        <ImageView
